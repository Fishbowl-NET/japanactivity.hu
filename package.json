{
  "name": "japanactivity.hu",
  "scripts": {
    "build": "npm run css && npm run copy",
    "css-compile": "sass src/scss/styles.scss dist/styles.css --load-path=node_modules --style compressed",
    "css-prefix": "postcss --replace dist/styles.css --use autoprefixer --map",
    "css-purge": "purgecss -c ./purgecss.config.js",
    "css": "npm run css-compile && npm run css-prefix && npm run css-purge",
    "css-debug": "npm run css-compile && npm run css-prefix",
    "copy": "copyfiles -u 1 ./src/index.html ./src/images/*.* dist",
    "serve": "http-server ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codernr/japanactivity.hu.git"
  },
  "author": "Csóré Zoltán",
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "bootstrap": "^5.0.1",
    "copyfiles": "^2.4.1",
    "http-server": "^0.12.3",
    "postcss-cli": "^8.3.1",
    "purgecss": "^4.0.3",
    "sass": "^1.34.0"
  }
}
